{
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "env": {
        "NODE_VERSION": "18"
    },
    "build": {
        "env": {
            "NODE_OPTIONS": "--max-old-space-size=4096"
        }
    },
    "functions": {
        "app/api/hello.js": {
            "runtime": "nodejs18.x"
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}